{% extends "_layouts/site" %}
  
{% block content %}

    <div class="container home">
        <div class="block-50">
            {% for blog in entry.featuredBlogPost %}
                <a href="{{ blog.getUrl }}" class="home__article">
                    <h1 class="home__article-title">
                        {{blog.title}}
                    </h1>
                    <div class="home__article-text">
                        {{ blog.redactor }}
                    </div>
                </a>
            {% endfor %}
        </div>
        <div class="block-50">
            {% for homepageUrl in entry.homepageUrl.all() %}
                <a href="{{homepageUrl.linkUrl.one().getUrl()}}" class="home__link">
                    <div class="home__link-item">
                        <h2 class="home__link-title">
                            {{homepageUrl.linkTitle}}
                        </h2>
                    </div>
                </a>

            {% endfor %}    
        </div>
    </div>


{% endblock %}